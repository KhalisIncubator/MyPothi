<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.WahegurooNetwork.MyPothi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
      android:name="com.WahegurooNetwork.MyPothi.MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:allowBackup="false"
      android:theme="@style/AppTheme">
      <activity
          android:name="com.WahegurooNetwork.MyPothi.SplashActivity"
          android:theme="@style/SplashTheme"
          android:label="@string/app_name">
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />
              <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
      </activity>
      <activity
        android:name="com.WahegurooNetwork.MyPothi.MainActivity"
        android:label="@string/app_name"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize|uiMode"
        android:launchMode="singleTask"
        />
      <activity android:name="com.facebook.react.devsupport.DevSettingsActivity" />
    </application>

</manifest>
